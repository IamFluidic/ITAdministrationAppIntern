@model TicketManagement.Models.TicketUpdateViewModel
@{
    ViewData["Title"] = "Update Ticket Status";
}



<h1 class="text-center mt-3 mb-3">Update Ticket Status</h1>
<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6">
        <div class="card p-4 border-1">
            <form asp-action="Update" method="post" enctype="multipart/form-data" class="needs-validation">

                <input type="hidden" asp-for="TicketID" />

                <div class="mb-2 d-flex">
                    <label asp-for="Title" class="form-label col-sm-3 col-form-label">Title</label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-2 d-flex">
                    <label asp-for="TicketStatusID" class="form-label col-sm-3 col-form-label">Status</label>
                    <div class="col-sm-9">
                        <select asp-for="TicketStatusID" class="form-select">
                            <option value="1">Open</option>
                            <option value="2">Pending</option>
                            <option value="3">Closed</option>
                        </select>
                        <span asp-validation-for="TicketStatusID" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-2 d-flex">
                    <label asp-for="Remarks" class="form-label col-sm-3 col-form-label">Remarks</label>
                    <div class="col-sm-9">
                        <textarea asp-for="Remarks" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3 button-container d-flex justify-content-end">
                   
                    <a asp-action="Index" class="btn btn-danger me-2  custom-button">Cancel</a>
                    <button type="submit" class="btn btn-primary custom-button">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
