<div class="main">

    <div class="Breadcrumb">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a style="text-decoration: none;" href="#">Client Panel</a></li>
                <li class="breadcrumb-item"><a style="text-decoration: none;" href="#">My Tickets</a></li>
            </ol>
        </nav>
    </div>
    <div class="Search">
        <form asp-action="index" method="get">
            <input type="text" name="search" value="@ViewBag.SearchKeyword" id="search" class="form-control"
                placeholder="Search here..." />
            <button type="submit"> Search</button>
        </form>

        <div class="Drop">
            <button type="button"
                onclick="location.href='@Url.Action("Add", "Tickets", new { area = "Client" })'">Create
                Ticket</button>
        </div>

    </div>


    @* <form asp-action="index" method="get" class="mb-3">
    <div class="input-group">
    <input type="text" name="search" value="@ViewBag.SearchKeyword" id="search" class="form-control"
    placeholder="Search" required />
    <button type="submit" class="btn btn-secondary">Search</button>

    </div>
    </form> *@


    <div class="tables table-responsive">
        <table class="mx-auto">
            <tr>
                <th style="text-decoration:none">S.N
                    @* <a asp-action="Index" asp-route-sortExpression="TicketID"
                    asp-route-sortOrder="@(ViewBag.SortOrder == "asc" ? "desc" : "asc")"
                    asp-route-searchText="@ViewBag.SearchText" style="text-decoration:none;color:black">
                    ID @if (ViewBag.SortExpression == "TicketID")
                    {
                    <span>@(ViewBag.SortOrder == "asc" ? "↑" : "↓")</span>
                    }
                    </a> *@
                </th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Updated On</th>
                <th>Updated By</th>
                <th>Action</th>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RowNumber</td>

                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.TicketStatusName</td>
                        <td>@item.RequestedOn</td>
                        <td>@item.RequestedBy</td>
                        @* <td>@item.AssignedBy</td> *@
                        <th>
                            <div class="btn-group" role="group">
                                <form asp-area="Client" asp-controller="Tickets" asp-action="ActivityLog" method="get">
                                    <button type="button" class="btn btn-primary mx-1" style="white-space: nowrap;"
                                            onclick="location.href='https://localhost:7012/admin/LogTicket'">
                                        Activity Log
                                    </button>
                                </form>
                            </div>
                        </th>
                    </tr>


                }
            </tbody>

        </table>
        <div class="paginations">
            <nav aria-label="Page navigation example">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                            @Html.ActionLink("<<", "Index", new
                                {
                                    page = ViewBag.Page - 1,
                                    search =
                                     ViewBag.SearchKeyword,
                                    sortColumn = ViewBag.SortColumn,
                                    sortOrder = ViewBag.SortOrder
                                }, new
                                { @class = "page-link", @aria_label = "Previous" })
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                                @Html.ActionLink(i.ToString(), "Index", new
                                    {
                                        page = i,
                                        search = ViewBag.SearchKeyword,
                                        sortColumn = ViewBag.SortColumn,
                                        sortOrder = ViewBag.SortOrder
                                    }, new
                                    {
                                        @class = "page-link"
                                    })
                            </li>
                        }
                        <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                            @Html.ActionLink(">>", "Index", new
                                {
                                    page = ViewBag.Page + 1,
                                    search =
                                     ViewBag.SearchKeyword,
                                    sortColumn = ViewBag.SortColumn,
                                    sortOrder = ViewBag.SortOrder
                                }, new
                                { @class = "page-link", @aria_label = "Next" })
                        </li>
                    </ul>
                </nav>

            </nav>
        </div>
    </div>

    <style>
        
        .main {
            height: 90vh;
            width: 100%;
            overflow: hidden;

            .tables {
                margin: 25px 30px;
                border: 1px solid #808080;
                overflow-x: auto;

                .paginations {
                    display: flex;
                    justify-content: end;
                    padding: 18px 15px 0px 0px;
                }

                table {
                    width: 100%;
                        min-width: 800px; 
                    tr {
                        border-bottom: 1px solid #808080;
                        height: 70px;
                    }

                    th {
                        padding: 0px 30px;
                        color: #000000;
                        font-family: "Montserrat";
                        font-size: 16px;
                            white-space: nowrap;
                    }

                    td {
                        padding-left: 30px;
                        font-family: "Montserrat";
                        font-size: 16px;
                        white-space: nowrap;

                        button {
                            font-family: "Montserrat";
                            font-size: 15px;
                            height: 35px;
                            border-radius: 5px;
                            border: none;

                            background-color: #0d6efd;
                            color: #fff;
                        }

                    }
                }
            }


        }

        .Breadcrumb {
            padding-left: 30px;
            padding-top: 25px;
        }

        .nav ol {
            font-family: "Montserrat";
            font-size: 20px;
        }

        .breadcrumb {
            font-size: 20px;
            font-family: "Montserrat";
            color: #027BFF;
        }

        .Search {
            display: flex;
            justify-content: space-between;

            form {
                padding-left: 30px;
                padding-top: 20px;
                display: flex;
                gap: 10px;

                input {
                    padding-left: 10px;
                    height: 35px;
                    width: 318px;
                    border-radius: 5px;
                    border: 1px solid #808080;
                }

                button {
                    font-family: "Montserrat";
                    font-size: 15px;
                    height: 35px;
                    border-radius: 5px;
                    border: none;
                    width: 85px;
                    background-color: #0d6efd;
                    color: #fff;
                }

            }

            .Drop {
                padding-right: 30px;
                padding-top: 20px;
                display: flex;
                gap: 15px;

                button {
                    font-family: "Montserrat";
                    font-size: 15px;
                    height: 35px;
                    border-radius: 5px;
                    border: none;
                    width: 141px;
                    background-color: #0d6efd;
                    color: #fff;
                }

            }
        }

    </style>


    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
